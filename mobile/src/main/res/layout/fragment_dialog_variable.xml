<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/dialog_title_value" />

        <EditText
            android:id="@+id/edit_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:autofillHints="@string/autofill_hint_text"
            android:inputType="text"
            android:hint="@string/value_dialog_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_margin="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/dialog_title_weighting" />

        <EditText
            android:id="@+id/edit_weighting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:autofillHints="@string/autofill_hint_number"
            android:inputType="number"
            android:hint="@string/weighting_dialog_text" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_icon"
        android:layout_height="@dimen/image_icon"
        app:layout_constraintBottom_toBottomOf="@+id/name_chooser"
        app:layout_constraintStart_toStartOf="@+id/name_chooser"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/padding"
        android:src="@drawable/randomized_dice_960_720" />

    <TextView
        android:id="@+id/name_chooser"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="@dimen/text_padding_left"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>